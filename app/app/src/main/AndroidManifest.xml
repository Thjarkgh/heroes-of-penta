<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <application
    android:name=".MyApp"
    android:allowBackup="true"
    android:dataExtractionRules="@xml/data_extraction_rules"
    android:fullBackupContent="@xml/backup_rules"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.HeroesOfPenta"
    tools:targetApi="31"
    tools:replace="android:dataExtractionRules">
    <activity
      android:name=".MainActivity"
      android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.account.AccountActivity"
      android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />

        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />

        <!-- E.g., if your redirect URI is "myapp://auth", then: -->
        <data
          android:scheme="myapp"
          android:host="account" />
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.auth.AuthActivity"
      android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />

        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />

        <!-- E.g., if your redirect URI is "myapp://auth", then: -->
        <data
          android:scheme="myapp"
          android:host="auth" />
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.auth.TiktokAuthCallbackActivity"
      android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />

        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />

        <!-- E.g., if your redirect URI is "myapp://auth", then: -->
        <data
          android:scheme="myapp"
          android:host="auth-tiktok" />
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.camera.CameraActivity"
      android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />

        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />

        <!-- E.g., if your redirect URI is "myapp://auth", then: -->
        <data
          android:scheme="myapp"
          android:host="camera" />
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.main.NftDetailActivity"
      android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />

        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />

        <!-- E.g., if your redirect URI is "myapp://auth", then: -->
        <data
          android:scheme="myapp"
          android:host="hero-detail" />
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.main.RosterActivity"
      android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />

        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />

        <!-- E.g., if your redirect URI is "myapp://auth", then: -->
        <data
          android:scheme="myapp"
          android:host="heroes" />
      </intent-filter>
    </activity>

  </application>

</manifest>