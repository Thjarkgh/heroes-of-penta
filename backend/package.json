{
  "name": "heroes-of-penta-backend",
  "version": "0.0.1",
  "description": "Server for NFT game Heroes of Penta",
  "main": "index.js",
  "scripts": {
    "build-core": "rimraf ./dist && tsc --build && mkdir -p ./dist/views && cp ./views/* ./dist/views && mkdir -p ./dist/static && cp ./static/* ./dist/static",
    "build-dev": "npm run build-core",
    "build-prod": "npm ci && npm run build-core && rimraf ../build && mkdir -p ../build && cp package*.json ../build && cp ./dist/* ../build -r && cd ../build && npm ci --omit dev",
    "test": "vitest",
    "start-dev": "node --env-file=../.env dist/index.js",
    "start-prod": "node dist/index.js"
  },
  "keywords": [
    "web3",
    "nft",
    "game"
  ],
  "author": "Thjarkgh",
  "license": "GPL-3.0-only",
  "dependencies": {
    "axios": "^1.7.9",
    "compression": "^1.7.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "ethers": "^6.13.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.4.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "openai": "^4.85.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/uuid": "^10.0.0",
    "vitest": "^3.0.5"
  }
}
